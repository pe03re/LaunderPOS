<section style="padding-top: 20px">
	<!-- All Customers -->
	<div class="container">
		<div class="table-responsive" style="padding-top: 15px">
			<legend>
				Customer List
			</legend>
				<table class="table table-hover table-vertical-middle">
					<thead>
						<tr>
							<th>Name</th>
							<th>Phone</th>
							<th>Email</th>
							<th>
								Address
							</th>
							<th>
							</th>
						</tr>
					</thead>
					<tbody>
						{{#each customers}}
						<tr>
							<td>{{this.name}}</td>
							<td>
								{{this.phone}}
							</td>
							<td>
								{{this.email}}
							</td>
							<td>
								{{this.fullAddress}}
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
		</div>
	</div>
</section>
