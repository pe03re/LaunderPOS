<!-- All Soaps -->
<section>
	<div class="container">
		<ul class="row clients-dotted list-inline">
			<!-- Soaps -->
			{{#each soaps}}
			<li class="col-md-3 col-sm-3 col-xs-6">
				<h3>
					<div>
						{{this.name}}
					</div>
					<div>
						${{this.USD}}
					</div>
				</h3>
				<!--
				 	TODO: Add a button to add this to cart.
				-->
				<div class="shop-item-buttons">
					<a class="btn btn-primary">
						<i class="fa fa-plus"></i>
					</a>
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
</section>
